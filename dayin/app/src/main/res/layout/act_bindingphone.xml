<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_title"></include>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/binding_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_biankuang"
            android:hint="请输入您的手机号码"
            android:maxLines="5"
            android:phoneNumber="true"
            android:textColor="#aaa"
            android:textColorHint="#aaa"
            android:textSize="@dimen/sp_16" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/binding_yanzhengma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_biankuang"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:phoneNumber="true"
                android:textColor="#aaa"
                android:textColorHint="#aaa"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/binding_huoqv"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_hongseding"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>


        <TextView
            android:id="@+id/binding_binding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_hongseding2"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_10"

            />
    </LinearLayout>


</RelativeLayout>