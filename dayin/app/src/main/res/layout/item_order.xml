<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_order_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/item_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/eee"
        />
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/item_order_pic"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/t32"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/item_order_name"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/item_order_pic"
            android:layout_toRightOf="@+id/item_order_pic"
            />
        <!--<TextView-->
            <!--android:id="@+id/item_order_yuanjia"-->
            <!--android:layout_below="@+id/item_order_name"-->
            <!--android:layout_marginLeft="@dimen/dp_10"-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:layout_toRightOf="@+id/item_order_pic"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="原价:   188元"-->
            <!--android:textColor="@color/t99"-->
            <!--android:textSize="@dimen/sp_12"-->
            <!--/>-->
        <LinearLayout
            android:layout_alignBottom="@+id/item_order_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/item_order_pic"
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交价:"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_tab_color"

                />
            <TextView
                android:id="@+id/item_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49"
                android:textSize="18dp"
                android:textColor="@color/main_tab_color"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_tab_color"

                />
        </LinearLayout>
        <TextView
            android:id="@+id/item_order_wancheng"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="30dp"
            android:text="待发货"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_alignBottom="@+id/item_order_pic"
            android:background="@drawable/button_hongseding2"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f0f0f0"></View>
</LinearLayout>