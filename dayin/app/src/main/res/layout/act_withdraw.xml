<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:background="@color/f0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/item_title"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText

                    android:id="@+id/withdraw_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入提现金额"
                    android:phoneNumber="true"
                    android:textColorHint="@color/t99"
                    android:textColor="@color/t33"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/withdraw_quanbu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center"
                    android:textColor="@color/main_tab_color"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee" />

            <EditText
                android:textColorHint="@color/t99"
                android:textColor="@color/t33"
                android:id="@+id/withdraw_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入真实姓名"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee" />
            <EditText
                android:textColorHint="@color/t99"
                android:textColor="@color/t33"
                android:id="@+id/withdraw_zhifubao"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入收款支付宝帐号"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/withdraw_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="44dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:textColorHint="@color/t99"
                    android:textColor="@color/t33"
                    android:textSize="@dimen/sp_14" />
                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/eee"
                    />
                <TextView
                    android:layout_marginRight="@dimen/dp_10"
                    android:id="@+id/withdraw_huoqv"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/main_tab_color"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee" />
            <EditText
                android:id="@+id/withdraw_yanzhnegma"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColorHint="@color/t99"
                android:textColor="@color/t33"
                android:textSize="@dimen/sp_14" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee" />
            <TextView
                android:id="@+id/withdraw_tixian"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_hongseding2"
                android:gravity="center"
                android:text="确认提现"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:lineSpacingExtra="8dp"
                android:id="@+id/withdraw_tv"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/t81"
                android:textSize="@dimen/sp_12" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:background="@color/white"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>