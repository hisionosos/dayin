<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <com.test.iview.dayin.view.XuanFuScrollview
        android:id="@+id/xiangqing_xfsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/xiangqing_xfsv_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/jianlou_rl"
                android:layout_width="match_parent"
                android:layout_height="250dp">


                <android.support.v4.view.ViewPager
                    android:id="@+id/xiangqing_vp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v4.view.ViewPager>

                <TextView
                    android:id="@+id/xiangqing_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="1/1"
                    android:textColor="#778899" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/xiangqing_xiajia"
                    android:layout_centerInParent="true"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:background="@drawable/yixiajia"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="原价∶"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/t81"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/xiangqing_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0"
                    android:textColor="@color/t81"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="bottom"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="最低价∶"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/d73921"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:gravity="bottom"
                    android:id="@+id/xiangqing_pingjunjia"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/d73921"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:textColor="@color/white"
                    android:background="@color/main_tab_color"
                    android:id="@+id/xiangqing_renshu"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/xiangqing_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />


            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/xiangqing_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:background="#f8f8f8"
                android:orientation="horizontal"></LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/eee" />

            <TextView
                android:id="@+id/xiangqing_zhengzai"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="正在参与捡漏"
                android:textColor="@color/t33"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/eee" />

            <RelativeLayout
                android:id="@+id/xiangqing_jianlou_xrv_rl"
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <com.test.iview.dayin.view.XRecyclerView
                    android:id="@+id/xiangqing_jianlou_xrv"
                    android:layout_width="match_parent"
                    android:layout_height="65dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/xiangqing_iv"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/xiangqing_lijijianlou"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/button_hongseding2"
                    android:layout_width="80dp"
                    android:text="立即捡漏"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/xiangqing__iv"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/eee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/xiangqing_dianpu_pic"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/dp_10"
                     />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/xiangqing_dianpu_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/xiangqing_dianpu_ziying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/button_hongseding2"
                            android:paddingBottom="1dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="1dp"
                            android:text="官方自营"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/xiangqing_dianpu_quanbu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/t81"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/xiangqing_dianpu_jianlou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="@color/t81"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
                <!--30  175-->
                <LinearLayout
                    android:id="@+id/xiangqing_dianpu_jindian"
                    android:background="@drawable/button_huisebiankuang1"
                    android:layout_width="87dp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="30dp">
                    <TextView
                        android:drawablePadding="2.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/jianlou_dianpu"
                        android:gravity="center"
                        android:text="进店逛逛"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_12"
                        />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/eee" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.test.iview.dayin.view.XRecyclerView
                    android:id="@+id/xiangqing_xrv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.test.iview.dayin.view.XRecyclerView>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </com.test.iview.dayin.view.XuanFuScrollview>
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/xiangqing_title_iv1"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@+id/xiangqing_title_iv1"
        android:id="@+id/xiangqing_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xiangqing_fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/button_heiseding"
            android:src="@drawable/xiangqing_fanhui" />

        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/xiangqing_title_rl"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <com.test.iview.dayin.view.XRecyclerView
                    android:id="@+id/xiangqing_title_xrv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/xiangqing_title_iv"
                    />
            </RelativeLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/xiangqing_shoucang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_heiseding"
            android:src="@drawable/xiangqing_xingno" />

        <ImageView
            android:id="@+id/xiangqing_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/button_heiseding"
            android:src="@drawable/xiangqing_share_no" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/xiangqing_iv1"
            android:layout_width="@dimen/dp_22"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/jianlou_shizhong" />
        <ImageView
            android:id="@+id/xiangqing_iv2"
            android:layout_width="@dimen/dp_8"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/xiangqing_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="卖家将在秒内处理您的订单!"
            android:textColor="@color/main_tab_color"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/xiangqing_jianlou"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/main_tab_color"
            android:gravity="center"
            android:text="出价捡漏"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/xiangqing_title_iv1"
        android:id="@+id/xiangqing_lunbo_ll"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="63dp"
        android:background="@drawable/button_heiseding4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.gcssloop.widget.RCRelativeLayout
            android:id="@+id/my_pic1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            app:round_as_circle="true">

            <ImageView
                android:id="@+id/xiangqing_lunbo_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                 />
        </com.gcssloop.widget.RCRelativeLayout>

        <TextView
            android:id="@+id/xiangqing_lunbo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/xiangqing_lunbo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/xiangqing_lunbo_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>




</RelativeLayout>