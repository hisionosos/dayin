<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150">

    <RadioGroup
        android:id="@+id/main_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="大小"
            android:gravity="center"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/text_color_selecter"
            android:drawableTop="@drawable/tab_daxiao"
            android:background="@color/transparent"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/main_tab2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="调整"
            android:textColor="@color/text_color_selecter"
            android:textSize="@dimen/sp_30"
            android:gravity="center"
            android:background="@color/transparent"
            android:drawableTop="@drawable/tab_tiaozheng"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/main_tab3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/text_color_selecter"
            android:text="表情包"
            android:gravity="center"
            android:background="@color/transparent"
            android:drawableTop="@drawable/tab_biaoqing"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/main_tab4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:textColor="@color/text_color_selecter"
            android:text="粗细"
            android:textSize="@dimen/sp_30"
            android:gravity="center"
            android:background="@color/transparent"
            android:drawableTop="@drawable/tab_cuxi"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/main_tab5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/text_color_selecter"
            android:text="二维码"
            android:gravity="center"
            android:background="@color/transparent"
            android:drawableTop="@drawable/tab_ercode"
            android:layout_weight="1"/>
    </RadioGroup>
</LinearLayout>