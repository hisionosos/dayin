<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_lay"
    android:background="@drawable/home_cback"
    android:orientation="vertical">

    <include layout="@layout/common_title"/>

    <ImageView
        android:id="@+id/my_shezhi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_290"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        android:src="@drawable/my_logo" />

    <TextView
        android:id="@+id/home_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嘟嘟机"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_shezhi"
        android:textSize="@dimen/dp_60"
        android:textColor="#000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/home_txt"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_160"
        android:background="@drawable/home_center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_90"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_220"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/dayinji"
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/sp_110"
                    android:background="@drawable/dayinji"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="娱乐功能"
                    android:layout_marginTop="@dimen/dp_40"
                    android:textSize="@dimen/sp_50"
                    android:textColor="#000"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/item2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="@dimen/dp_220"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/liuyan"
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_110"
                    android:background="@drawable/liuyan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="票据打印"
                    android:layout_marginTop="@dimen/dp_40"
                    android:textSize="@dimen/sp_50"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_60"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/item3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_220"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_110"
                    android:background="@drawable/tupian"/>

                <TextView
                    android:id="@+id/tupian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片打印"
                    android:layout_marginTop="@dimen/dp_40"
                    android:textSize="@dimen/sp_50"
                    android:textColor="#000"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/item4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="@dimen/dp_220"
                android:orientation="vertical">
                <ImageView
                    android:layout_above="@+id/wendang"
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="@dimen/dp_110"
                    android:background="@drawable/wendang"/>

                <TextView
                    android:id="@+id/wendang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网页打印"
                    android:layout_marginTop="@dimen/dp_40"
                    android:textSize="@dimen/sp_50"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



















</RelativeLayout>