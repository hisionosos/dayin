<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_chujia_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_chujia_cha"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@+id/dialog_chujia_ll"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/xiangqing_cha" />

    <LinearLayout
        android:id="@+id/dialog_chujia_ll"
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_biankuang_baise"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/dialog_chujia_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_biankuang"
                android:hint="请填写您的出价"
                android:maxLength="7"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_10"
                android:phoneNumber="true"
                android:textColor="@color/black"
                android:textColorHint="#aaa"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/dialog_chujia_zhineng"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_hongseding"
                android:gravity="center"
                android:text="智能出价"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均捡漏价"
                android:textColor="#333"
                android:textSize="@dimen/dp_14" />
            <TextView
                android:id="@+id/dialog_chujia_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49元"
                android:textColor="@color/main_tab_color"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=",为每人节省 "
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/dialog_chujia_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49元"
                android:textColor="@color/main_tab_color"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="！"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_chujia_chujia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_hongseding2"
            android:gravity="center"
            android:text="立即出价"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:maxLines="1"
            android:textSize="@dimen/dp_14"
            android:id="@+id/dialog_chujia_miao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/main_tab_color"
            android:text="失败或超时付款将退至您的账户余额!"
            android:drawableLeft="@drawable/xiangqing_tanhao"
            android:drawablePadding="5dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="#ccc" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chujia_zhifu_pic" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_chujia_cha1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@+id/dialog_chujia_ll1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/xiangqing_cha"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/dialog_chujia_ll1"
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认支付:   "
                android:textColor="@color/t33"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/dialog_zhifu_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textColor="@color/main_tab_color"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_zhifu_jiesheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="为您节省0元"
            android:textColor="@color/t99"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="35dp"
            android:background="@color/dc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/qianbao" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额支付"
                    android:textColor="@color/t33"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户余额:  "
                        android:textColor="@color/t99"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/dialog_zhifu_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0元"
                        android:textColor="@color/main_tab_color"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/dialog_zhifu_qianbao"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/button_qianbao"
                android:text="支付"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/weixin" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textColor="@color/t33"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="推荐安装5.0以上版本"
                    android:textColor="@color/t99"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <Button
                android:id="@+id/dialog_zhifu_weixin"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/button_weixin"
                android:text="支付"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/zhifubao" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="@color/t33"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="开启小额免密支付"
                    android:textColor="@color/t99"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>

            <Button
                android:id="@+id/dialog_zhifu_zhifubao"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/button_zhifubao"
                android:text="支付"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>