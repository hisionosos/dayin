<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/common_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF">

        <RelativeLayout
            android:id="@+id/code_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/get_rcode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:layout_alignParentRight="true"
                android:background="#0E6EB8"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/dy_toqcode"/>

            <EditText
                android:id="@+id/txt_url"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:hint="输入文字..."
                android:gravity="center_vertical"
                android:textColor="#000"
                android:layout_toLeftOf="@+id/get_rcode"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@null"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/canv"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code_bar"
            android:background="@drawable/shape_pop_dialog"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_20"
            >

            <LinearLayout
                android:id="@+id/biaoqian1_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <include layout="@layout/biaoqianone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/biaoqian2_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <include layout="@layout/biaoqiantwo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/biaoqian3_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <include layout="@layout/biaoqianthree" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/biaoqian4_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <include layout="@layout/biaoqianfour" />
            </LinearLayout>

        </RelativeLayout>

        <RadioGroup
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_tab1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="@string/dy_muban"
                android:gravity="center"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/text_color_selecter"
                android:drawableTop="@drawable/tab_muban"
                android:background="@color/transparent"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/main_tab2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="@string/dy_size"
                android:textColor="@color/text_color_selecter"
                android:textSize="@dimen/sp_30"
                android:gravity="center"
                android:background="@color/transparent"
                android:drawableTop="@drawable/tab_daxiao"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/main_tab3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/text_color_selecter"
                android:text="@string/dy_ajust"
                android:gravity="center"
                android:background="@color/transparent"
                android:drawableTop="@drawable/tab_tiaozheng"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/main_tab0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:textColor="@color/text_color_selecter"
                android:text="@string/dy_biaoqing"
                android:textSize="@dimen/sp_30"
                android:gravity="center"
                android:visibility="gone"
                android:background="@color/transparent"
                android:drawableTop="@drawable/tab_biaoqing"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/main_tab4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/text_color_selecter"
                android:text="@string/dy_cuxi"
                android:gravity="center"
                android:background="@color/transparent"
                android:drawableTop="@drawable/tab_cuxi"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/main_tab5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/text_color_selecter"
                android:text="@string/dy_erweima"
                android:gravity="center"
                android:background="@color/transparent"
                android:drawableTop="@drawable/tab_ercode"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/main_tab6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/text_color_selecter"
                android:text="@string/dy_biaoqing"
                android:gravity="center"
                android:background="@color/transparent"
                android:drawableTop="@drawable/tab_biaoqing"
                android:layout_weight="1"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/wangge_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:layout_above="@+id/main_tab"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:paddingLeft="@dimen/dp_60"
            android:paddingRight="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:background="#fff"
            android:visibility="invisible"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/min_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:text="1"/>

                    <SeekBar
                        android:id="@+id/size_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/max_txt"
                        android:layout_toRightOf="@+id/min_txt"
                        android:layout_centerVertical="true"
                        android:progress="50"
                        android:max="100"
                        android:thumb="@drawable/pain_u"
                        android:layout_marginRight="@dimen/dp_60"
                        android:layout_marginLeft="@dimen/dp_60"/>

                    <TextView
                        android:id="@+id/max_txt"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:text="15"/>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>