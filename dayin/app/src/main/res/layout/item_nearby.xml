<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_nearby_iv_zuo"
        android:layout_width="5dp"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/item_nearby_iv_zuo1"
        android:layout_width="10dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/item_nearby_jianlou"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_nearby_iv1"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/item_nearby_pic"
            android:layout_width="match_parent"
            android:layout_height="1dp"
             />

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/item_nearby_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="14dp" />

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="最低价￥"
                android:textColor="@color/main_tab_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/item_nearby_money"
                android:layout_width="0dp"
                android:gravity="bottom"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8.8"
                android:textColor="@color/main_tab_color"
                android:textSize="14dp" />
                <TextView
                    android:textColor="#939393"
                    android:id="@+id/item_nearby_xl"
                    android:text="是打发打发"
                    android:textSize="@dimen/dp_13"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                     />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/item_nearby_iv_you"
        android:layout_width="5dp"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/item_nearby_iv_you1"
        android:layout_width="10dp"
        android:layout_height="match_parent" />
</LinearLayout>