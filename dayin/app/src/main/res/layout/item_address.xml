<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_address_name"
            android:textColor="@color/t33"
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="曾先生    13645685423"
            />
        <TextView
            android:id="@+id/item_address_moren"
            android:paddingRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_tab_color"
            />
        <ImageView
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/item_address_moren_pic"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gou"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/item_address_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方是的"
        android:textColor="@color/t99"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/item_address_dizhi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方是的"
        android:textColor="@color/t99"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="8dp" />
</LinearLayout>