<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/item_title"></include>
    <LinearLayout
        android:id="@+id/install_touxiang"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/t33"
            />
        <com.gcssloop.widget.RCRelativeLayout
            app:round_as_circle="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:visibility="gone"
                android:scaleType="fitXY"
                android:id="@+id/install_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/install_pic111"
                android:background="@drawable/my_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
        </com.gcssloop.widget.RCRelativeLayout>
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:src="@drawable/dayu"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dc"
        />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/t33"
            />
        <EditText
            android:id="@+id/install_name"
            android:gravity="right"
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="点击填写昵称"
            />
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:src="@drawable/dayu"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dc"
        />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/install_shengri"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/t33"
            />
        <TextView
            android:id="@+id/install_time111"
            android:gravity="right"
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="生日当天会收到一张免单券哦"
            android:textColor="@color/t33"
            />
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:src="@drawable/dayu"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dc"
        />
    <LinearLayout
        android:id="@+id/install_dizhi"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/t33"
            />
        <TextView
            android:hint="点击设置收货地址"
            android:id="@+id/install_zizhi_tv"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:src="@drawable/dayu"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dc"
        />
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/install_bangding"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/t33"
            />
        <TextView
            android:id="@+id/install_bangding_tv"
            android:gravity="right"
            android:hint="点击绑定手机号"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:src="@drawable/dayu"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dc"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/install_baocun"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/button_hongseding2"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="保存"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/install_tuichu"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textSize="14dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/button_f5"
        android:textColor="@color/t99"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="退出登录"
        android:layout_marginBottom="@dimen/dp_10"
        />
</LinearLayout>

</RelativeLayout>