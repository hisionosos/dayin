<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/item_title"></include>
    <EditText
        android:id="@+id/chongzhi_money"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@null"
        android:phoneNumber="true"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/t99"
        android:hint="请输入充值金额 （最低充值1元）"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dcdcdc"
        />
    <LinearLayout
        android:id="@+id/chongzhi_weixin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/weixin"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#333"
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微信支付"
            />
        <ImageView
            android:id="@+id/chongzhi_weixin_iv"
            android:layout_width="18dp"
            android:background="@drawable/chongzhi_yuan"
            android:layout_height="18dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dcdcdc"
        />
    <LinearLayout
        android:id="@+id/chongzhi_zhifubao"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/zhifubao"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#333"
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            />
        <ImageView
            android:id="@+id/chongzhi_zhifubao_iv"
            android:layout_width="18dp"
            android:background="@drawable/chongzhi_yuan_no"
            android:layout_height="18dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dcdcdc"
        />
    <TextView
        android:id="@+id/chongzhi_chongzhi"
        android:text="确认充值"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/button_hongseding2"
        />
</LinearLayout>