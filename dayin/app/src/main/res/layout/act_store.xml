<?xml version="1.0" encoding="utf-8"?>
<com.test.iview.dayin.view.VpSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/store_vsrl"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.test.iview.dayin.view.XuanFuScrollview
            android:id="@+id/store_xfsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/store_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/store_rl_title111"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@color/main_tab_color">

                    <RelativeLayout
                        android:id="@+id/store_rl"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp">

                        <com.gcssloop.widget.RCRelativeLayout
                            android:id="@+id/store_pic1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:round_as_circle="true"
                            app:stroke_color="@color/white"
                            app:stroke_width="3dp">

                            <ImageView
                                android:scaleType="fitXY"
                                android:id="@+id/store_pic"
                                android:layout_width="117dp"
                                android:layout_height="117dp"
                                android:src="@drawable/my_pic" />
                        </com.gcssloop.widget.RCRelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="捡漏网商城"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/store_ll_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dianpu_laba" />

                    <com.xiaosu.view.text.VerticalRollingTextView
                        android:id="@+id/verticalRollingView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:duration="500"
                        android:maxLines="1"
                        android:textColor="@color/main_tab_color"
                        android:textSize="14dp"
                        app:animInterval="3000" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/store_iv"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/eee" />

                <RelativeLayout
                    android:id="@+id/store_xian_rl"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/store_quanbu"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="全部"
                            android:textColor="@color/main_tab_color"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/store_xinpin"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="新品"
                            android:textColor="@color/t33"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/store_remen"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="热门"
                            android:textColor="@color/t33"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:id="@+id/store_money"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/store_money_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="价格"
                                android:textColor="@color/t33"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:id="@+id/store_money_iv"
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/fenlei_no" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/dc" />
                </RelativeLayout>

                <com.test.iview.dayin.view.XRecyclerView
                    android:id="@+id/act_home_classification_xrv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.test.iview.dayin.view.XRecyclerView>
                <TextView
                    android:id="@+id/store_dixian"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/home_xrv"
                    android:background="@color/f0"
                    android:gravity="center"
                    android:text="别拉了,我是有底线的"
                    android:textColor="@color/t99"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />
                <LinearLayout
                    android:id="@+id/no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="64dp"
                        android:background="@drawable/no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="暂无相关商品哦~"
                        android:textColor="#aaa"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>
        </com.test.iview.dayin.view.XuanFuScrollview>

        <LinearLayout
            android:id="@+id/store_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/store_fanhui"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@drawable/xiangqing_fanhui" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/store_shoucang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:src="@drawable/xiangqing_xingno" />

            <ImageView
                android:id="@+id/store_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@drawable/xiangqing_share_no" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/store_ying_rl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="48dp"
            android:background="@color/white"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/store_ying_quanbu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="@color/main_tab_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/store_ying_xinpin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="新品"
                    android:textColor="@color/t33"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/store_ying_remen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门"
                    android:textColor="@color/t33"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:id="@+id/store_ying_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/store_ying_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:textColor="@color/t33"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:id="@+id/store_ying_money_iv"
                        android:layout_width="10dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/fenlei_no" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/dc" />
        </RelativeLayout>


    </RelativeLayout>
</com.test.iview.dayin.view.VpSwipeRefreshLayout>