<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_133"
        android:text="密码找回"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_275"
        android:textColor="#ff4a4a4a"
        android:textSize="@dimen/sp_90" />

    <TextView
        android:layout_width="@dimen/dp_144"
        android:layout_height="@dimen/dp_71"
        android:text="手机号"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_90"
        android:textColor="#ff4a4a4a"
        android:textSize="@dimen/sp_48" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_125"
        android:layout_marginRight="@dimen/sp_96"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_74">
        <TextView
            android:id="@+id/area_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_85"
            android:text="+86"
            android:textColor="#ff376af5"
            android:textSize="@dimen/sp_72" />

        <EditText
            android:id="@+id/phone_edt"
            android:layout_width="@dimen/dp_620"
            android:layout_height="@dimen/dp_112"
            android:gravity="center_vertical"
            android:background="@null"
            android:singleLine="true"
            android:digits="0123456789"
            android:layout_toRightOf="@id/area_code"
            android:layout_marginLeft="@dimen/dp_100"
            android:textColor="#ff4a4a4a"
            android:textSize="@dimen/sp_96" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffd8d8d8"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_96"
        android:layout_marginLeft="@dimen/sp_96">

        <TextView
            android:layout_width="@dimen/dp_144"
            android:layout_height="@dimen/dp_71"
            android:text="验证码"
            android:textColor="#ff4a4a4a"

            android:textSize="@dimen/sp_48" />

        <TextView
            android:id="@+id/code_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_59"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:textColor="#ff376af5"
            android:textSize="@dimen/sp_40" />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/sp_96"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_45">
        <EditText
            android:id="@+id/code_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_112"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="验证码为6位数字"
            android:background="@null"
            android:textColor="#ff9b9b9b"
            android:textSize="@dimen/sp_48" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffd8d8d8" />

    </LinearLayout>


    <TextView
        android:layout_width="@dimen/sp_96"
        android:layout_height="@dimen/dp_71"
        android:text="密码"
        android:textColor="#ff4a4a4a"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginLeft="@dimen/sp_96"
        android:textSize="@dimen/sp_48" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/sp_96"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_50">
        <EditText
            android:id="@+id/pwd_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_112"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:background="@null"
            android:hint="至少6位密码"
            android:textColor="#ff9b9b9b"
            android:drawableRight="@drawable/pwd_check_error"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_48" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffd8d8d8" />

    </LinearLayout>


    <Button
        android:id="@+id/commit_btn"
        android:layout_width="@dimen/dp_888"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_90"
        android:background="@drawable/shape_button_selector"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_60"
        android:layout_gravity="center"/>



</LinearLayout>

